                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
                @*<p class="site-title">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/sources/img/logoprincipal.png" alt="Reserva tu Cancha pe" />
                    </a>
                </p>*@
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Lista usuarios", "ListaUsuarios", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
                @*@Html.ActionLink("Registro Reserva", "RegistroReserva", "Publico", new { area = "" }, new { @class = "navbar-brand" })*@
                @*@Html.ActionLink("Resultado Busqueda", "ResultadoBusqueda", "Publico", new { area = "" }, new { @class = "navbar-brand" })*@
